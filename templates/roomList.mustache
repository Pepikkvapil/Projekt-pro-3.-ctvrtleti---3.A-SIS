<table class='table table-striped'>
    <tr>
        <th>Name</th>
        <th>No.</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>

    {{#rooms}}
    <tr>
        <td>
            <a href='detail.php?roomId={{room_id}}'>{{name}}</a>
        </td>
        <td>{{no}}</td>
        <td>{{#phone}}{{phone}}{{/phone}}{{^phone}}&mdash;{{/phone}}</td>
        <td>
            <form action="update.php" method="get" style="display: inline-block">
                <input type="hidden" name="roomId" value="{{room_id}}">
                <input type="submit" value="Upravit" class="btn btn-info" disabled>
            </form>
            <form action="delete.php" method="post" style="display: inline-block">
                <input type="hidden" name="roomId" value="{{room_id}}">
                <input type="submit" disabled value="Smazat" class="btn btn-danger" onclick="return confirm('Opravdu chcete smazat místnost?\nAkce je nevratná!');">
            </form>
        </td>
    </tr>
    {{/rooms}}
    {{^rooms}}
        <tr><td colspan="3">Databáze je prázdná</td></tr>
    {{/rooms}}

</table>

<form action="create.php" method="post">
    <button class="btn btn-primary disabled" type="submit">Založit novou místnost</button>
</form>

<form action="../logout.php" method="post">
    <button class="btn btn-danger" type="submit">Logout</button>
</form>